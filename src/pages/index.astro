---
import Layout from '../layouts/Layout.astro';
import { SearchBar } from '@/components/ui/searchBar';
import Greeting from '@/components/Greeting.svelte';
import Particles from '@/components/ui/particles';
export const prerender = true;
import WordPullUp from '@/components/magicui/word-pull-up';
import GradualSpacing from '@/components/magicui/gradual-spacing';
import MarqueeChartSongs from '@/components/ui/marqueeChartSongs';
import { SongBar } from '@/components/songBar';
---

<Layout title="Beat">
    <div id="playlist-container" class="elative w-screen h-full">
        <!-- <PageHeader /> -->

        <div class="relative z-10 py-20">
            <!-- <Greeting />-->
            <section class="mt-16 text-center">
                <GradualSpacing
                    client:load
                    className="font-display text-center text-9xl font-bold tracking-[-0.1em]  text-white  md:leading-[5rem]"
                    text="Beat"
                />
                <WordPullUp
                    client:load
                    className="text-4xl my-4 font-bold tracking-[-0.02em] text-white md:leading-[5rem] "
                    words="Search a song and feel the beat"
                />

                <Particles
                    className=" inset-0 w-full h-full fixed -z-10"
                    quantity={1000}
                    ease={40}
                    color={'#f2f2f2'}
                    staticity={20}
                    refresh
                    client:load
                />
            </section>

            <div class="w-full h-full flex flex-col items-center">
                <MarqueeChartSongs client:visible />
                <div class="w-full lg:w-[60%] md:w-[80%] px-2 m-auto">
                    <div
                        class="rounded-full py-2 px-3 flex gap-4 basis-1/2 group">
                        <a
                            href="/"
                            class="flex-grow text-center rounded-full text-xl font-normal border-zinc-500 py-2 px-3 bg-gray-700 bg-opacity-40 hover:bg-opacity-90 hover:font-bold backdrop-blur-sm transition-all duration-300 ease-in-out"
                            >Buscar</a
                        >
                        <a
                            href="/favs"
                            class="flex-grow text-center rounded-full text-xl font-normal border-zinc-500 py-2 px-3 bg-gray-700 bg-opacity-40 hover:bg-opacity-90 hover:font-bold backdrop-blur-sm transition-all duration-300 ease-in-out"
                            >Favoritos</a
                        >
                    </div>
                </div>
                <SearchBar client:visible />
            </div>
        </div>
        <div class="fixed bottom-0 z-[9999999] w-full">
            <SongBar
                client:load
                transition:name="media-player"
                transition:persist
            />
        </div>
        <style></style>
    </div>
</Layout>
