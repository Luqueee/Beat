---
import GradualSpacing from '@/components/magicui/gradual-spacing';
import WordPullUp from '@/components/magicui/word-pull-up';
import { SongBar } from '@/components/songBar';
import MarqueeChartSongs from '@/components/ui/marqueeChartSongs';
import { SearchBar } from '@/components/ui/searchBar';
import Layout from '../layouts/Layout.astro';

const bg_image = '/bgindex.webp';

export const prerender = true;
---

<Layout title="Beat">
    <section id="playlist-container" class="relative w-full h-full">
        <!-- <PageHeader /> -->

        <div class="relative z-10 py-20">
            <!-- <Greeting />-->
            <section class="mt-16 text-center px-4 md:lg:px-0">
                <GradualSpacing
                    client:load
                    className="font-display text-center text-9xl font-bold tracking-[-0.1em]  text-white  md:leading-[5rem]"
                    text="Beat"
                />
                <WordPullUp
                    client:load
                    className="text-4xl my-4 font-bold tracking-[-0.02em] text-white md:leading-[5rem] "
                    words="Search a song and feel the beat"
                />

                <img
                    src={bg_image}
                    decoding="async"
                    loading="eager"
                    class="fixed -z-30 min-w-full min-h-full object-cover top-0 left-0 opacity-10 filter blur-[2px]"
                    alt="background index page"
                />
            </section>

            <div
                class="w-full h-full flex flex-col gap-2 justify-center items-center">
                <MarqueeChartSongs client:load />
                <div class="w-full lg:w-[60%] md:w-[80%] px-2 m-auto">
