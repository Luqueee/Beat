---
import { Player } from '@/components/Player';
import { Song } from '@/components/song';
import AsideMenu from '../components/blocks/AsideMenu.astro';
import { ViewTransitions } from 'astro:transitions';
import '@/styles/globals.css';
import { StatusBar } from '@/components/ui/status';

interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="Astro description" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
        <ViewTransitions fallback="none" />
    </head>
    <body
        class="bg-zinc-900 min-h-screen transition-all duration-500 overflow-x-hidden">
        <div id="app" class="relative h-full w-full">
            <main class="min-w-screen">
                <slot class="" />
            </main>
        </div>

        <style></style>

        <style is:global>
            html,
            body {
                font-family: 'CircularStd', system-ui, sans-serif;
                background: #010101;
                color: white;
                margin: 0;
                padding: 0;
                overflow-x: hidden; /* Prevent horizontal overflow */
            }

            body {
                min-height: 100vh; /* Full screen height */
                display: flex;
                flex-direction: column;
            }

            #app {
                flex: 1;
                display: flex;
                flex-direction: column;
            }

            main {
                width: 100%; /* Ensure it doesn't overflow */
                max-width: 100vw; /* Prevent horizontal overflow */
                box-sizing: border-box; /* Include padding and border in the element's total width and height */
            }

            ::-webkit-scrollbar {
                width: 5px;
                height: 5px;
                border-radius: 20px;
            }

            /* Track */
            ::-webkit-scrollbar-track {
                border-radius: 20px;
            }

            /* Handle */
            ::-webkit-scrollbar-thumb {
                background: #159d48;
                border-radius: 20px;
            }

            /* Handle on hover */
            ::-webkit-scrollbar-thumb:hover {
                background: #159d48;
            }

            @font-face {
                font-family: 'CircularStd';
                src: url('/fonts/CircularStd-Medium.woff2') format('woff2');
                font-weight: 500;
                font-style: normal;
                font-display: swap;
            }

            @font-face {
                font-family: 'CircularStd';
                src: url('/fonts/CircularStd-Book.woff2') format('woff2');
                font-weight: 400;
                font-style: normal;
                font-display: swap;
            }

            @font-face {
                font-family: 'CircularStd';
                src: url('/fonts/CircularStd-Light.woff2') format('woff2');
                font-weight: 300;
                font-style: normal;
                font-display: swap;
            }

            @font-face {
                font-family: 'CircularStd';
                src: url('/fonts/CircularStd-Bold.woff2') format('woff2');
                font-weight: 700;
                font-style: normal;
                font-display: swap;
            }

            @font-face {
                font-family: 'CircularStd';
                src: url('/fonts/CircularStd-Black.woff2') format('woff2');
                font-weight: 900;
                font-style: normal;
                font-display: swap;
            }
        </style>
    </body>
</html>
